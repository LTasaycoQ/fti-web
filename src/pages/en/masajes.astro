---
import BaseLayout from "../../layouts/BaseLayoutEn.astro";
import MasajeConsejo from "../../components/en/Masages/MasajeConsejo.astro";
import fondoImagen from "../../assets/backgrounds/Salon-masajes-2.webp";
import Fondos from "../../components/fondos.astro";
import MasajesPasos from "../../components/en/Masages/masajepasos.astro";
import MasajePrecio from "../../components/en/Masages/precios.astro";
import OpenMassages from "../../components/en/Masages/OpenMassages.astro";


const title = "Massage";
const description = "Recover your energy in Cusco with our 'Healing Hands'. Swedish, Shiatsu, and reflexology massages available every day from 8am to 10pm.";
---

<BaseLayout title={title} description={description}>
    <Fondos imgFondo={`url(${fondoImagen.src})`} />
    <main>
       <MasajeConsejo />
       <MasajesPasos />
       <MasajePrecio />
       <OpenMassages />
    </main>
</BaseLayout>
