---
import BaseLayout from "../layouts/BaseLayout.astro";
import Fondos from "../components/fondos.astro";
import HotelStay from "../components/Hoteles/HotelStay.astro";

import fondoImagen from "../assets/backgrounds/fachada.webp";

const title = "Hotel";
const description = "Ubicado en una casona colonial a media cuadra de la Plaza San Pedro, Terra Andina ofrece 51 habitaciones equipadas y un servicio de excelencia en el Cusco.";
---

<BaseLayout title={title} description={description}>
    <Fondos imgFondo={`url(${fondoImagen.src})`} />
    <main class="home">
        <HotelStay />
    </main>

</BaseLayout>
