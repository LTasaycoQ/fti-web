---
import "../assets/styles/global.css";
---

<div class="header-top hidden md:flex justify-center items-center">
  <div class="flex p-[10px] items-center gap-[30px] justify-end w-[90%] max-sm:w-[90%]">
    <a href="mailto:sales@terraandinahotel.com" class="header-top__contact">
      <i class="bi bi-envelope"></i>
      sales@terraandinahotel.com
    </a>

    <div class="bg-gray-400 rounded-full w-[20px] h-[20px]  cursor-pointer"></div>
  </div>
</div>
<style>
  .header-top {
    background: var(--primary-color);
  }
  .header-top__contact {
    position: relative;
    color: white;
    text-decoration: none;
    display: flex;
    gap: 10px;
  }
</style>
