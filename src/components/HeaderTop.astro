---

const { pathname } = Astro.url;

const isEnglish = pathname.startsWith('/en');

let targetUrl;

if (isEnglish) {
  targetUrl = pathname.replace('/en', '') || '/';
} else {
  targetUrl = pathname === '/' ? '/en' : `/en${pathname}`;
}
---
